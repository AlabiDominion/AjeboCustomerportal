@model AjeboCustomerPortal.Models.Cart
@{
    ViewData["Title"] = "Your cart";

    int Nights(DateTime s, DateTime e) => (e.Date - s.Date).Days;
    decimal LineTotal(AjeboCustomerPortal.Models.CartItem i)
        => i.Apartment.Price * Nights(i.StartDate, i.EndDate) * i.Quantity;
    decimal Total = Model?.Items?.Sum(LineTotal) ?? 0m;
}

<h1>Your cart</h1>

@if (Model == null || !Model.Items.Any())
{
    <p>Your cart is empty.</p>
    <p><a class="btn" asp-controller="Apartments" asp-action="Index">Browse apartments</a></p>
}
else
{
    <div class="grid">
        @foreach (var i in Model.Items)
        {
            <div class="card">
                <div class="pad">
                    <h3>@i.Apartment?.Name</h3>
                    <div>
                        @i.StartDate:yyyy-MM-dd → @i.EndDate:yyyy-MM-dd
                        (@Nights(i.StartDate, i.EndDate) night(s))
                    </div>
                    <div>Qty: @i.Quantity</div>
                    <div><strong>₦@LineTotal(i).ToString("N2")</strong></div>

                    <form asp-action="RemoveItem" method="post" style="margin-top:8px">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@i.Id" />
                        <button class="btn" type="submit">Remove</button>
                    </form>
                </div>
            </div>
        }
    </div>

    <hr />
    <div class="row" style="justify-content:flex-end; gap:12px;">
        <strong>Total: ₦@Total.ToString("N2")</strong>
        <a class="btn primary" asp-action="Checkout">Proceed to checkout</a>
    </div>
}
